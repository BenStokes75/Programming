{
  "manifest_version": 3,
  "name": "Timer Extension",
  "description": "A simple timer extension for Chrome",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
